  "description": "a tool help get size of element for React, support higher-order component and component render.",
  "main": "dist/index.js",
  "scripts": {
    "build": "babel src --out-dir dist",
    "build:watch": "babel src --out-dir dist --watch",
    "clean": "rimraf dist",
    "lint": "eslint --config .eslintrc . --ignore-path .gitignore --fix",
    "flow": "flow",
    "check": "npm run lint && npm run flow",
    "test": "jest",
    "pre:pr": "npm run clean && npm run build && npm run lint && npm run test",
    "pre:publish": "npm run clean && npm run build && npm run check && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lamhieu-vk/rc-target-size.git"
  },
  "keywords": [
    "react",
    "target",
    "responsive",
    "size",
    "render",
    "placeholder",
    "hoc",
    "component",
    "ssr",
    "library",
    "detector",
    "resize"
  ],
  "author": "Lam Hieu <lamhieu.vk@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^23.4.2",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "enzyme": "^3.5.0",
    "enzyme-adapter-react-16": "^1.3.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-flowtype": "^2.48.0",
